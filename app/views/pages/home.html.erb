   <%= render 'shared/navbar' %>
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url(<%= image_path 'back.jpg' %>);">
  <div class="banner-content">
    <h1>Project W</h1>
    <p>The best camping sites for your Scout Team</p>
    <form action="#">
    		<div class="form-group">
              <label for="city">Select City</label>
              <input type="city" class="form-control" id="city" placeholder="Brussels">
            </div>
            <div class="row">
              <div class="col-xs-3">
                <div class="form-group">
                  <label for="start">Start</label>
                  <input type="text" class="form-control" id="start" placeholder="08-nov-17">
                </div>
              </div>
              <div class="col-xs-3">
                <div class="form-group">
                  <label for="end">End</label>
                  <input type="text" class="form-control" id="end" placeholder="10-nov-17">
                </div>
              </div>
               <div class="col-xs-3">
              	<div class="form-group">
              	<label for="referrer">Guests</label>
              	<select id="referrer" class="form-control">
                	<option value="">10-20</option>
                	<option value="">20-30</option>
                	<option value="">30-40</option>
                	<option value="">40-50</option>
                	<option value="">50+</option>
              	</select>
            	</div>
              </div>
              <div class="col-xs-3">
                <div class="form-group btn-div">
                 <input type="submit" value="Search" class="btn btn-primary">
                </div>
              </div>
            </div>  
          </form>
  </div>
</div>
